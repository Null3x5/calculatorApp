<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#999999"
    android:theme="@android:style/Theme.NoTitleBar">



    <EditText
        android:layout_width="fill_parent"
        android:layout_height="90sp"
        android:text="0"
        android:textSize="90dp"
        android:editable="false"
        android:id="@+id/textView"
        android:background="#779977"
        android:singleLine="true"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="."
        android:textSize="35dp"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="0"
        android:textSize="35dp"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_toEndOf="@+id/button" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="="
        android:textSize="35dp"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="/"
        android:textSize="35dp"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/button3" />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="1"
        android:textSize="35dp"
        android:id="@+id/button5"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="2"
        android:textSize="35dp"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button5"
        android:layout_toEndOf="@+id/button5" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="3"
        android:textSize="35dp"
        android:id="@+id/button7"
        android:layout_above="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="*"
        android:textSize="35dp"
        android:id="@+id/button8"
        android:layout_above="@+id/button3"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="4"
        android:textSize="35dp"
        android:id="@+id/button9"
        android:layout_above="@+id/button5"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5"
        android:textSize="35dp"
        android:id="@+id/button10"
        android:layout_alignTop="@+id/button9"
        android:layout_toEndOf="@+id/button9" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="6"
        android:textSize="35dp"
        android:id="@+id/button11"
        android:layout_alignTop="@+id/button10"
        android:layout_toEndOf="@+id/button10" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="-"
        android:textSize="45dp"
        android:id="@+id/button12"
        android:layout_above="@+id/button7"
        android:layout_toEndOf="@+id/button7" />
    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        android:textSize="35dp"
        android:id="@+id/button13"
        android:layout_above="@+id/button9"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        android:textSize="35dp"
        android:id="@+id/button14"
        android:layout_alignTop="@+id/button13"
        android:layout_toEndOf="@+id/button13" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:textSize="35dp"
        android:id="@+id/button15"
        android:layout_above="@+id/button11"
        android:layout_alignStart="@+id/button11" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="+"
        android:textSize="35dp"
        android:id="@+id/button16"
        android:layout_alignTop="@+id/button15"
        android:layout_toEndOf="@+id/button11" />

    <Button
        android:layout_width="1700dp"
        android:layout_height="60dp"
        android:text="clear"
        android:textSize="35dp"
        android:id="@+id/button17"
        android:layout_above="@+id/button13"
        android:layout_alignEnd="@+id/button14" />

    <Button
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:text="--->"
        android:textSize="35dp"
        android:id="@+id/button18"
        android:layout_above="@+id/button15"
        android:layout_alignEnd="@+id/button16" />

</RelativeLayout>
